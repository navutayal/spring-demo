<?xml version="1.0" encoding="UTF-8"?>

<configuration status="warn">

    <Appenders>

        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] %logger{36}.%method - %msg%n"/>
        </Console>

    </Appenders>

    <Loggers>
        <Root level="warn">
            <AppenderRef ref="Console"/>
        </Root>

        <Logger name="com.example" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>

</configuration>
